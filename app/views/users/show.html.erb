<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
       <h1>
         <%= gravatar_for @user %><br />
         <%= @user.email %>
       </h1>
    </section>
  </aside>
</div>

<% if current_user == User.find_by(id: params[:id]) %>
  <h3>What's on your mind?</h3>
  <%= render 'posts/post_form' %>
<% end %>
<br /><br />
<div class="col md-8">
  <% if @user.posts.any? %>
    <h4>Posts (<%= @user.posts.count %>) </h4>
    <ol class="posts">
      <%= render @posts %>
    </ol>
    <%= will_paginate @posts %>
  <% end %>
</div>
