<% if current_user.likes.find_by(post_id: post.id) %>
  <%= link_to "unlike post", current_user.likes.find_by(post_id: post.id),
                             method: :delete, class: "btn btn-xs btn-warning",
                             data: { confirm: "Are you sure?" } %>
<% else %>
  <%= link_to "like post", likes_path(id: post.id), method: :post,
                           class: "btn btn-xs btn-primary" %>
<% end %>
